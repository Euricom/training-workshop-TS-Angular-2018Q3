{
  "name": "js-webpack",
  "version": "1.0.0",
  "description": "Babel WebPack Template",
  "scripts": {
    "serve": "webpack-dev-server --open --inline --hot",
    "build": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "lint": "tslint --project tsconfig.json --format stylish",
    "format": "prettier --write 'app/**/*.{ts,css}'",
    "test:ci": "jest",
    "test": "jest --watch --notify"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "intl": "^1.2.5"
  },
  "devDependencies": {
    "@types/intl": "^1.2.0",
    "@types/jest": "^23.0.0",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "expect-more-jest": "^1.0.1",
    "file-loader": "^1.1.11",
    "jest": "^23.1.0",
    "jest-preset-typescript": "^1.0.1",
    "jest-watch-typeahead": "^0.1.0",
    "prettier": "^1.13.4",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.3.1",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.1",
    "webpack": "^4.11.0",
    "webpack-cli": "^3.0.2",
    "webpack-dev-server": "^3.1.4"
  },
  "jest": {
    "verbose": false,
    "preset": "jest-preset-typescript",
    "setupTestFrameworkScriptFile": "<rootDir>/test/jest.setup.ts",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  }
}
